<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>89a0a19b-355b-4f96-9970-21cd4e052287</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Bannisters</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email Genius"/>
  <Description DefaultValue="A template to get started."/>
  <IconUrl DefaultValue="https://res.cloudinary.com/dhwhrk0oe/image/upload/v1757994942/Email_Genius_Logo_wkmrt4.png"/>
  <HighResolutionIconUrl DefaultValue="https://res.cloudinary.com/dhwhrk0oe/image/upload/v1757994932/Email_Genius_Logo_opibqq.png"/>
  <SupportUrl DefaultValue="https://www.bannisters.com/contact"/>
  <AppDomains>
    <AppDomain>https://marketingbannisters-ai.github.io</AppDomain>
    <AppDomain>https://bannister.app.n8n.cloud</AppDomain>
    <AppDomain>https://bannisters.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.8"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://marketingbannisters-ai.github.io/email-genius/src/taskpane/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://marketingbannisters-ai.github.io/email-genius/src/taskpane/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.8">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
                <!-- Removed the extra "Perform an action" button -->
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://res.cloudinary.com/dhwhrk0oe/image/upload/v1757994942/Email_Genius_Logo_wkmrt4.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://res.cloudinary.com/dhwhrk0oe/image/upload/v1757994942/Email_Genius_Logo_wkmrt4.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://res.cloudinary.com/dhwhrk0oe/image/upload/v1757994942/Email_Genius_Logo_wkmrt4.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://marketingbannisters-ai.github.io/email-genius/src/commands/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://marketingbannisters-ai.github.io/email-genius/src/taskpane/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Email Genius"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Task Pane"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Opens a pane displaying all available properties."/>
        <!-- Removed ActionButton strings -->
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
